@using Microsoft.AspNetCore.Identity;
@using J6.DAL.Entities;
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager
@{ 
    AppUser CurrentUser = await userManager.FindByNameAsync(User.Identity.Name);
}
@{
    ViewBag.Title = "Home";
}

<body>
    <div class="block-header">
        <h2>DASHBOARD</h2>
    </div>

    <!-- Widgets -->
    <div class="row clearfix">
        @*Product*@
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a asp-controller="Products" asp-action="Index">
                <div class="info-box bg-pink hover-expand-effect">
                    <div class="icon">
                        <i class="fa fa-gifts"></i>
                    </div>

                    <div class="content">
                        <div class="text">Product</div>
                        <div class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20"></div>
                    </div>

                </div>
            </a>
        </div>
        @*Category*@
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a asp-controller="Categories" asp-action="Index">

                <div class="info-box bg-cyan hover-expand-effect">
                    <div class="icon">
                        <i class="fa fa-gifts"></i>
                    </div>
                    <div class="content">
                        <div class="text">Category</div>
                        <div class="number count-to" data-from="0" data-to="257" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </a>
        </div>
        @*SubCategories*@
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a asp-controller="SubCategories" asp-action="Index">

                <div class="info-box bg-light-green hover-expand-effect">
                    <div class="icon">
                        <i class="fa fa-gifts"></i>
                    </div>
                    <div class="content">
                        <div class="text">Sub Category</div>
                        <div class="number count-to" data-from="0" data-to="243" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </a>
        </div>
        @*Brands*@
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a asp-controller="Brands" asp-action="Index">

                <div class="info-box bg-orange hover-expand-effect">
                    <div class="icon">
                        <i class="fa fa-gifts"></i>
                    </div>
                    <div class="content">
                        <div class="text">Brand</div>
                        <div class="number count-to" data-from="0" data-to="1225" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </a>
        </div>

    </div>
    <div class="row clearfix m-b-0 p-4 pt-5 text-center">
        @* Number Of Products *@
        <div class="info-box col-md-6 col-12 p-0" style="height: 200px; background-color: floralwhite">
            <div class="icon m-0 p-0" style="width:30%">
                <i class="fa fa-boxes-alt" style="margin:50px auto;color:black;"></i>
            </div>
            <div class="content text-center" style="margin:10px auto">
                <div class="text text-center">
                    <h2>
                        Number Of Products
                    </h2>
                </div>
                <div class="number text-center btn p-5" style="margin:30px auto;cursor:auto;">
                    @ViewData["ProductsNumber"]
                </div>
            </div>
        </div>
        @* Number Of Solid Products *@
        <div class="info-box col-md-6 col-12 p-0" style="height: 200px; background-color: lightblue">
