                    <h2>
                        Number Of Orders Done
                    </h2>
                </div>
                <div class="number text-center btn p-5" style="margin:30px auto;cursor:auto;">
                    @ViewData["Done"]
                </div>
            </div>
        </div>
        @*Number Of Orders Canceled*@
