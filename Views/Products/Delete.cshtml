@model J6.DAL.Entities.Product

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="card border-success mb-3 col-md-6 col-12" style="font-size:larger;">
    <div style="width:50%;">
        <img src="~/images/@Model.Image"
             class="card-img-top m-2"
             asp-append-version="true" />
    </div>
    <div class="card-header bg-transparent border-success">
        <h3>
            @Html.DisplayFor(model => model.ProductName)
        </h3>
    </div>
    <div class="card-body text-black">
        <h5 class="card-title">
            Subcategory :
            @Html.DisplayFor(model => model.Subcategory.SubcategoryName)
        </h5>
    </div>
    <div class="card-body text-black">
        <h5 class="card-title">
            Brand :
            @Html.DisplayFor(model => model.Brand.BrandName)
        </h5>
    </div>

    <div class="card-body" style="height:auto;direction:ltr">
        <div class="card-text text-left" style="overflow:hidden;text-overflow:ellipsis;height:auto">
            Description: <br />  @Html.DisplayFor(model => model.Description)
        </div>
        <hr />
        <p class="card-text text-left">
            material: @Html.DisplayFor(model => model.material)
        </p>
        <p class="card-text text-left">
            Model: @Html.DisplayFor(model => model.Model)
        </p>
        <p class="card-text text-left">
            Ship: @Html.DisplayFor(model => model.Ship)
        </p>
        <p class="card-text text-left">
            Color:
            <span style="color:@Model.Color">
                @Html.DisplayFor(model => model.Color)
            </span>
        </p>
        <p class="card-text text-left">
            Size: @Html.DisplayFor(model => model.Size)
        </p>
        <p class="card-text text-left">
            Quantity: @Html.DisplayFor(model => model.Quantity)
        </p>
        <p class="card-text text-left">
            SoldQuantities: @Html.DisplayFor(model => model.SoldQuantities)
        </p>
        <p class="card-text text-left">
            Rating: @Html.DisplayFor(model => model.Rating) <i class="fa fa-star text-warning"></i>
        </p>

        <p class="card-text text-left">
            Price: @Html.DisplayFor(model => model.Price) Egp
        </p>
        <p class="card-text text-left">
            Discount:
            <span class="alert text-danger col-1 p-0">
                @Html.DisplayFor(model => model.Discount)
            </span>
        </p>
    </div>

    <div class="card-footer bg-transparent border-success">
        @Html.DisplayNameFor(model => model.CreatedAt)
        @Html.DisplayFor(model => model.CreatedAt)
    </div>
    <div class="card-footer bg-transparent border-success">
        @Html.DisplayNameFor(model => model.UpdatedAt)
        @Html.DisplayFor(model => model.UpdatedAt)
    </div>
    <div class="card-footer bg-transparent border-success">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger m-2 p-3" />
        </form>
        <a asp-action="Index" class="btn btn-sm btn-primary text-uppercase m-2 mr-4 p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
    </div>
