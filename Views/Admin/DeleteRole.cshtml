@model J6.Models.DeleteRole
@{

    ViewBag.Title = "Delete Role";

}

<h2>Delete</h2>

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.RoleName) Role?</h3>
<form asp-action="DeleteRole" method="POST">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger m-2 p-3" />
</form>
<a asp-action="Index" class="btn btn-sm btn-primary text-uppercase m-2 mr-4 p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>



