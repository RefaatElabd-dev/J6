@model J6.DAL.Entities.Product
@using Microsoft.AspNetCore.Identity;
@using J6.DAL.Entities;
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager
@{
    AppUser CurrentUser = await userManager.FindByNameAsync(User.Identity.Name);
}
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}
<div class="container text-center">
    <h2>Details for Product @Model.Id</h2>
    <div class="card border-success mb-3 col-md-8 offset-md-2 col-12" style="font-size:20px;">
        <div style="width:100%;" class="text-center">
            <img height="300" width="300" src="~/images/@Model.Image"
                 class="card-img-top m-2 rounded"
                 asp-append-version="true" />
        </div>
        <div class="card-header bg-transparent border-success">
            <p style="font-weight:700">
                @Html.DisplayFor(model => model.ProductName)
            </p>
        </div>
        <div class="card-header bg-transparent border-success">
            <p class="card-text text-left">
                <span style="font-weight:700">
                    Subcategory :
                </span> 
                @Html.DisplayFor(model => model.Subcategory.SubcategoryName)
            </p>
            <p class="card-text text-left">
                <span style="font-weight:700">
                    Brand :
                </span>
                    @Html.DisplayFor(model => model.Brand.BrandName)
            </p>
         </div>
            <div class="card-body" style="height:auto;direction:ltr">
                <div class="card-text text-left" style="overflow:hidden;text-overflow:ellipsis;height:auto">
                    <span style="font-weight:700">  
                        Description:
                    </span>
                    <br />
                    <span style="font-family:cursive;">
                    @Html.DisplayFor(model => model.Description)
                    </span>
            </div>
                <hr />
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        material:
                    </span>
                    @Html.DisplayFor(model => model.material)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Model:
                    </span>
                    @Html.DisplayFor(model => model.Model)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700"> 
                        Ship:
                     </span>   
                        @Html.DisplayFor(model => model.Ship)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Color:
                    </span>
                    <span style="color:@Model.Color">
                        @Html.DisplayFor(model => model.Color)
                    </span>
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Size:
                    </span>
                        @Html.DisplayFor(model => model.Size)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Quantity:
                    </span>
                    @Html.DisplayFor(model => model.Quantity)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        SoldQuantities:
                    </span>
                    @Html.DisplayFor(model => model.SoldQuantities)
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Rating:
                    </span>
                    @Html.DisplayFor(model => model.Rating) <i class="fa fa-star text-warning"></i>
                </p>

                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Price:
                    </span>
                    @Html.DisplayFor(model => model.Price) Egp
                </p>
                <p class="card-text text-left">
                    <span style="font-weight:700">
                        Discount:
                    </span>
                    <span class="alert text-danger col-1 p-0">
                        @Html.DisplayFor(model => model.Discount)
                    </span>
                </p>
            </div>

            <div class="card-footer bg-transparent border-success">
                <span style="font-family:cursive;font-weight:600;">
                    @Html.DisplayNameFor(model => model.CreatedAt) 
                </span>
                    @Html.DisplayFor(model => model.CreatedAt)<i class="fa fa-clock ml-2"></i>
            </div>
            <div class="card-footer bg-transparent border-success">
                <span style="font-family:cursive;font-weight:600;">
                    @Html.DisplayNameFor(model => model.UpdatedAt) 
                </span>
                @Html.DisplayFor(model => model.UpdatedAt)<i class="fa fa-calendar-edit ml-2"></i>
            </div>
            <div class="card-footer bg-transparent border-success">
                <span style="font-weight:700">
                    Seller Owner :
                </span>
                @Html.DisplayFor(model => CurrentUser.UserName)
            </div>
            <div class="card-footer bg-transparent border-success text-left">
                    <a asp-controller="Seller" asp-action="GetSellerProduct" asp-route-id="@CurrentUser.Id" class="btn btn-sm btn-primary text-uppercase m-2 mr-4 p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
                    <a asp-controller="Seller" asp-action="PutSellerProduct" asp-route-id="@Model.Id" class="btn btn-warning m-2 p-3"><i class="fa fa-edit fa-2x"></i></a>
            </div>
        </div>
</div>