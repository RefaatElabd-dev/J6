@model J6.DAL.Entities.AppUserRole

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-10 mx-auto py-4 font-16">
    <div class="card">
        <div class="card-header bg-warning text-uppercase">
            <h2>Create New Role For Exist User</h2>
        </div>


        <div class="card-body text-white" style="background-color:darkslateblue">
            <form enctype="multipart/form-data" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="user.UserName" class="control-label"></label>
                            <select asp-for="UserId" class="form-control form-control-lg" asp-items="ViewBag.UserId"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Role" class="control-label"></label>
                            <select asp-for="RoleId" class="form-control form-control-lg" asp-items="ViewBag.RoleId"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-success text-uppercase mt-4 p-2" />
                </div>
            </form>
            <a asp-action="Index" class="btn btn-sm btn-primary text-uppercase p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
        </div>
    </div>
</div>









