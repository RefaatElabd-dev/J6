@section DataTableSection{

    <script>
            $(function () {
                $('.js-basic-example').DataTable({
                    responsive: true,
                    paging: true,
                    pageLength: 10,
                    bSort: true,
                    bFilter: true,
                    //bLengthChange: false,
                    //bInfo: false,
                    lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

                });
            });
    </script>
}





