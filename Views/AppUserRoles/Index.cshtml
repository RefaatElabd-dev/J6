@model IEnumerable<J6.DAL.Entities.AppUserRole>

@{
    ViewData["Title"] = "Index";
}


<section class="mt-2 container">

    <div class="container mt-4">
        
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="text-center text-uppercase">List of Users</h2>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <a asp-action="Create" class="btn btn-sm btn-primary text-uppercase p-3"><i class="fas fa-plus-circle fa-2x"></i></a>
                    <a asp-action="ApproveSeller" class="btn btn-sm btn-primary text-uppercase p-3 ml-2">Seller Request</a>
                    <div class="p-2 m-2 text-center container" style="background-color: #343a40">
                        <ul style="font-size: 18px; font-weight: 800; font-family: cursive " class="p-2">
                            <li style="color: lightblue ;display: inline;" class="mr-4">Adimn</li>
                            <li style="color: lightgreen; display: inline;" class="mr-4">Seller</li>
                            <li style="color: white; display: inline;" class="mr-4">Customer</li>
                            <li style="color: lightyellow; display: inline;" class="mr-4">Moderator</li>
                        </ul>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center table-hover js-basic-example dataTable" style="display:block;width:800px">

                        <thead>
                            <tr style="width:100%">
                                <th class="text-center" style="width:200px">
                                    @Html.DisplayNameFor(model => model.user.UserName)
                                </th>
                                <th class="text-center" style="width:200px">
                                    Role
                                </th>
                                <th class="text-center" style="width:400px">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.user.IsActive == true)
                                    { <tr style='background-color: @(item.Role.Name == "Seller" ? "lightgreen" : (item.Role.Name == "Admin" ? "lightblue" : (item.Role.Name == "Moderator" ? "lightyellow" : "white")));'>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.user.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Role.Name)
                                        </td>

                                        <td class="" style="width:400px">
                                            <a asp-action="Details" asp-route-id="@item.UserId"class="btn btn-info m-2 p-3"><i class="fa fa-info-circle fa-2x"></i></a>
                                            <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning m-2 p-3"><i class="fa fa-edit fa-2x"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger m-2 p-3"><i class="fa fa-trash fa-2x"></i></a>
                                        </td>
                                    </tr>
                                    }
                                }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>





