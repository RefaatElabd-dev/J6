@model J6.DAL.ViewModels.CategoriesEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h2>Edit</h2>

<h4>Category @Model.CategoryId</h4>
<hr />
<div class="col-md-10 mx-auto py-4 font-16">
    <div class="card">
        <div class="card-header bg-warning text-uppercase">
            <h2>Edit Category</h2>
        </div>


        <div class="card-body text-white" style="background-color: navy">
            <form enctype="multipart/form-data" asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Image">Upload Photo</label>
                            <input type="file" asp-for="Image" accept="jpg,png,gif" class="form-control form-control-lg" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" />
                        <input type="hidden" asp-for="Image" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CategoryName" class="control-label"></label>
                            <input asp-for="CategoryName" class="form-control form-control-lg" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Content" class="control-label"></label>
                            <input asp-for="Content" class="form-control form-control-lg" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UpdatedAt" class="control-label"></label>
                            <input asp-for="UpdatedAt" class="form-control form-control-lg" />
                            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-warning text-uppercase mt-4 p-2" />
                </div>
            </form>
            <a asp-action="Index" class="btn btn-sm btn-primary text-uppercase p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
        </div>
    </div>
</div>

