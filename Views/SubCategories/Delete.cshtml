@model J6.DAL.Entities.SubCategory

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="card border-success mb-3 col-md-6 col-12" style="font-size:larger;">
    <div style="width:50%;">
        <img src="~/images/@Model.Image"
             class="card-img-top m-2"
             asp-append-version="true" />
    </div>
    <div class="card-header bg-transparent border-success"> @Html.DisplayFor(model => model.SubcategoryName)</div>
    <div class="card-body text-black">
        <h5 class="card-title">
            Category :
            @Html.DisplayFor(model => model.Category.CategoryName)
        </h5>
    </div>
    <div class="card-body text-black">
        <h5 class="card-title">
            Content :
            @Html.DisplayFor(model => model.Content)
        </h5>
    </div>
    <div class="card-footer bg-transparent border-success">
        @Html.DisplayNameFor(model => model.CreatedAt)
        @Html.DisplayFor(model => model.CreatedAt)
    </div>
    <div class="card-footer bg-transparent border-success">
        @Html.DisplayNameFor(model => model.UpdatedAt)
        @Html.DisplayFor(model => model.UpdatedAt)
    </div>
    <div class="card-footer bg-transparent border-success">
        <form asp-action="Delete">
            <input type="hidden" asp-for="SubcategoryId" />
            <input type="submit" value="Delete" class="btn btn-danger m-2 p-3" />
        </form>
        <a asp-action="Index" class="btn btn-sm btn-primary text-uppercase m-2 mr-4 p-3"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
    </div>
</div>