@model IEnumerable<J6.DAL.Entities.Brand>


@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml"; }








<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Welcome To Roles</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped text-center table-hover js-basic-example dataTable">

                            <thead>
                                <tr>
                                      <th class="text-center" >
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th class="text-center" >
                                    @Html.DisplayNameFor(model => model.BrandName)
                                </th>
                                <th class="text-center">Operations</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                     <tr>
                                    <td >
                                        <img width="80" height="80" src="~/images/@item.Image"
                                             class="rounded-circle" alt="">
                                    </td>
                                    <td >
                                        @Html.DisplayFor(modelItem => item.BrandName)
                                    </td>
                                    <td class="" >
                                        <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-info m-2 p-3"><i class="fa fa-info-circle fa-2x"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning m-2 p-3"><i class="fa fa-edit fa-2x"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger m-2 p-3"><i class="fa fa-trash fa-2x"></i></a>
                                    </td>
                                   
                                </tr>

                                }

                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@*<input type="text" placeholder="@SharedLocalizer["Edit"]" />*@



@section DataTableSection{

    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true,
                paging: true,
                pageLength: 3,
                bSort: true,
                bFilter: true,
                //bLengthChange: false,
                //bInfo: false,
                lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

            });
        });
    </script>
}

