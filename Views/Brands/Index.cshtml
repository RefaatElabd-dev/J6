@model IEnumerable<J6.DAL.Entities.Brand>


@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml"; }








<section class="mt-2 container">

    <div class="container mt-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="text-center text-uppercase">List of Brands</h2>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <a asp-action="Create" class="btn btn-sm btn-primary text-uppercase p-3"><i class="fas fa-plus-circle fa-2x"></i></a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center table-hover js-basic-example dataTable" style="display:block;width:800px">

                        <thead>
                            <tr style="width:100%">
                                <th class="text-center" style="width:200px">
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th class="text-center" style="width:200px">
                                    @Html.DisplayNameFor(model => model.BrandName)
                                </th>
                                <th class="text-center"style="width:400px">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="width:100%">
                                    <td style="width:200px">
                                        <img width="80" height="80" src="~/images/@item.Image"
                                             class="rounded-circle" alt="">
                                    </td>
                                    <td style="width:200px">
                                        @Html.DisplayFor(modelItem => item.BrandName)
                                    </td>
                                    <td class="" style="width:400px">
                                        <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-info m-2 p-3"><i class="fa fa-info-circle fa-2x"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning m-2 p-3"><i class="fa fa-edit fa-2x"></i></a>
                                       @* <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger m-2 p-3"><i class="fa fa-trash fa-2x"></i></a>*@
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>





    @*<input type="text" placeholder="@SharedLocalizer["Edit"]" />*@



    @section DataTableSection{

        <script>
            $(function () {
                $('.js-basic-example').DataTable({
                    responsive: true,
                    paging: true,
                    pageLength: 10,
                    bSort: true,
                    bFilter: true,
                    //bLengthChange: false,
                    //bInfo: false,
                    lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

                });
            });
        </script>
    }

